<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ContactListBeach.ContactDetails"
             Title="">
    <Grid RowDefinitions="Auto,Auto,Auto,*" Padding="20">

        <Image Grid.Row="0"  x:Name="ContactImage" HeightRequest="300"/>
        <Label Grid.Row="1" x:Name="LblContactName" FontSize="Title"/>
        <VerticalStackLayout Grid.Row="2">
            <Label x:Name="LblContactDesc" FontSize="Subtitle"/>
            <Label x:Name="LblContactEmail" FontSize="Subtitle"/>
            <Label x:Name="LblContactPhoneNum" FontSize="Subtitle"/>
        </VerticalStackLayout>
        <Button 
            Grid.Row="3"
            VerticalOptions="End"
            Text="Return"
            FontSize="Medium"
            FontAttributes="Bold"
            Clicked="ReturnClicked">
        </Button>
    </Grid>
</ContentPage>